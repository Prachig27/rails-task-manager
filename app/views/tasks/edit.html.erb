<!-- app/views/tasks/edit.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Edit Task</title>
  <%= stylesheet_link_tag "application", media: "all" %>
</head>
<body class="container mt-5">
  <h1 class="text-center mb-4">Edit Task</h1>

  <%= form_with model: @task, url: task_path(@task), method: :patch, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :title, "Task Title" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :details, "Task Details" %>
      <%= form.text_area :details, class: "form-control" %>
    </div>

    <div class="mb-3 form-check">
      <%= form.check_box :completed, class: "form-check-input" %>
      <%= form.label :completed, "Completed", class: "form-check-label" %>
    </div>

    <div class="text-center">
      <%= form.submit "Update Task", class: "btn btn-primary" %>
      <%= link_to "Cancel", tasks_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</body>
</html>
